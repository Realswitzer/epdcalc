{
  "name": "epdcalc-root",
  "private": true,
  "workspaces": [
    "src",
    "web"
  ],
  "stackblitz": {
    "installDependencies": false,
    "startCommand": "pnpm install"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "eslint": "^10.0.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "scripts": {
    "build": "cd './web' && vite build",
    "dev": "cd './web' && bun run dev",
    "prepare": "cd './web' && svelte-kit sync || echo ''",
    "check": "cd './web' && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "cd './web' && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  }
}
